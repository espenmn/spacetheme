<dl class="portlet portletSliderPortlet"
    tal:define="portal_url context/@@plone_portal_state/portal_url;"
        		i18n:domain="medialog.spacetectheme"
        		tal:condition="view/hasImages">
 
<div  class="sliderportlet">
<tal:repeat tal:repeat="obj view/get_images"> 
    <div   tal:define="image_title obj/Title;
            description obj/Description;
		    image_url python:obj.getObject().absolute_url() + '/@@images/image/preview'"  >
		<img src="" alt=""
		    class="slider-img img-responsive"
		    tal:attributes="alt image_title; src image_url"/>
 
        <h3  tal:content="image_title"/>
        <p  tal:content="description"/>
    </div>
</tal:repeat>
</div>
<script>$(function () {
    $(".sliderportlet").responsiveSlides({
    maxwidth: 768,
    nav: false,
    speed: 2000,
    pager: true,
    prevText: "<",  
    nextText: ">",    
  
    });
});

</script>
</dl>
