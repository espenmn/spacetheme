<aside class="portlet portletSliderPortlet"
    tal:define="portal_url context/@@plone_portal_state/portal_url;"
        		i18n:domain="medialog.spacetectheme"
        		tal:condition="view/hasImages">

    <header class="portletHeader">
        <span tal:content="view/data/title" />
    </header>
    
    <div class="portletItem sliderportlet"  
      tal:define="imagex view/get_image_list">
      <tal:repeat tal:repeat="obj imagex"> 
        <div>
         <h3  tal:content="obj/title"/>
         <img src="" alt=""
		    class="slider-img img-responsive"
		    tal:define="slideimage_url python: obj.url + '/@@images/image/preview'"
		    tal:attributes="alt obj/title; src slideimage_url"/>
         <p  tal:content="obj/description"/>
        </div>
      </tal:repeat>
    </div>
<script>$(function () {
    $(".sliderportlet").responsiveSlides({
    maxwidth: 768,
    nav: false,
    speed: 2000,
    pager: true,
    prevText: "<",  
    nextText: ">",    
  
    });
});

</script>
</aside>
