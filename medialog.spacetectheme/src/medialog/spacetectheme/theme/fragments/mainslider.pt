<section id="main-slider" class="no-margin"> 
<tal:check tal:condition="exists: context/slider">
	<div id="slider">
        <tal:repeat tal:repeat="item  context/slider/@@contentlisting">
            <div  class="fillme" tal:define="item_url item/getURL|item/absolute_url;
				    image_url python:item_url + '/@@images/image'">
 				<img class="slider-img img-responsive" src="" alt="" tal:attributes="src image_url"/>
            </div>
        </tal:repeat>
    </div>

 

<link rel="stylesheet" href="++theme++medialog.spacetectheme/css/responsiveslides.css">
<script src="++theme++medialog.spacetectheme/javascript/responsiveslides.min.js"></script>


<script>$(function () {
    $("#slider").responsiveSlides({
    maxwidth: 4000,
    nav: false,
    speed: 2000,
    pager: false,
    prevText: "<",  
    nextText: ">",    
  
    });
});
$(window).resize(function(){
   // Setting the heigth of the slides
   $('#slider').height($('#slider').width()*46/100);
}).resize();
</script>
</tal:check>
</section>